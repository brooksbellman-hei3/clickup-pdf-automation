services:
  - type: web
    name: clickup-pdf-reporter-web
    runtime: node
    buildCommand: ./build.sh && npm install
    startCommand: node index.js
    plan: starter
    envVars:
      - key: NODE_ENV
        value: production
      - key: TIMEZONE
        value: America/New_York
      - key: SEND_HOUR
        value: 9
      - key: CLICKUP_API_TOKEN
        sync: false
      - key: CLICKUP_LIST_ID
        sync: false
      - key: SMTP_HOST
        sync: false
      - key: SMTP_PORT
        sync: false
      - key: SMTP_USER
        sync: false
      - key: SMTP_PASS
        sync: false
      - key: EMAIL_TO
        sync: false

