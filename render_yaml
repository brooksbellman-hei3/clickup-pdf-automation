services:
  - type: web
    name: clickup-pdf-reporter-web
    runtime: node
    buildCommand: npm install
    startCommand: node server.js
    plan: starter
    region: oregon
    env: node
    buildFilter:
      paths:
      - package.json
      - package-lock.json
      - "*.js"
      ignoredPaths:
      - README.md
      - "*.md"
    envVars:
      - key: NODE_ENV
        value: production
      - key: PORT
        value: 10000
      # Sensitive environment variables (set these in Render dashboard)
      - key: CLICKUP_API_TOKEN
        sync: false
      - key: CLICKUP_LIST_ID  
        sync: false
      - key: SMTP_HOST
        sync: false
      - key: SMTP_PORT
        sync: false
      - key: SMTP_USER
        sync: false
      - key: SMTP_PASS
        sync: false
      - key: EMAIL_TO
        sync: false
      - key: TIMEZONE
        value: America/New_York
      - key: SEND_HOUR
        value: "9"

  - type: worker
    name: clickup-pdf-reporter-scheduler
    runtime: node
    buildCommand: npm install
    startCommand: node scheduler.js
    plan: starter
    region: oregon
    env: node
    buildFilter:
      paths:
      - package.json
      - package-lock.json
      - "*.js"
      ignoredPaths:
      - README.md
      - "*.md"
    envVars:
      - key: NODE_ENV
        value: production
      # Sensitive environment variables (set these in Render dashboard)
      - key: CLICKUP_API_TOKEN
        sync: false
      - key: CLICKUP_LIST_ID
        sync: false
      - key: SMTP_HOST
        sync: false
      - key: SMTP_PORT
        sync: false
      - key: SMTP_USER
        sync: false
      - key: SMTP_PASS
        sync: false
      - key: EMAIL_TO
        sync: false
      - key: TIMEZONE
        value: America/New_York
